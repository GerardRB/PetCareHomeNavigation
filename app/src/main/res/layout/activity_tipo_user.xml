<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".homenavigation.InicioYRegistro.TipoUserActivity">

    <!--
    #039BE5
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_vertical|center_horizontal"
     
        android:layout_marginTop="-100dp"
        app:srcCompat="@drawable/petcarelogo" />
    -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/logo9" />
    <Button
        android:id="@+id/dueño"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@android:dimen/app_icon_size"
        android:background="@drawable/miboton"
        android:textColor="@android:color/background_light"
        android:text="Soy un dueño" />

    <Button
        android:id="@+id/cuidador"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/miboton"
        android:textColor="@android:color/background_light"
        android:text="Soy un cuidador"

        />

    <Button
        android:id="@+id/info"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@android:dimen/app_icon_size"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/background_light"
        android:text="¿Qué es PetCare?"
        />
</LinearLayout>