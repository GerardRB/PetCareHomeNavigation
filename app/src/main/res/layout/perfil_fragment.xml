<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">
    <!-- FRAGMENTO QUE SE ABRE DETRÁS DEL
    fragment_config_dueno al ir al apartado de configuración-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/background_config2"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:src="@drawable/perfil" />

            <TextView
                android:id="@+id/tipo_usuario_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="Tipo de usuario"
                android:textColor="@color/colorblanco"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipo_usuario_txt"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/profile_image"
                android:includeFontPadding="false"
                android:text="Nombre del usuario"
                android:textColor="@color/colorblanco"
                android:textSize="14sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="Calificación: 10.0 "></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nextFocusRight="@id/calificacion"

                ></ImageView>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Correo Electrónico">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_correo_textconfig"
                android:drawablePadding="10dp"
                android:text="usuario@gmail.com"
                android:textColor="@color/grisazul" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Teléfono">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_telefono_textconfig"
                android:drawablePadding="10dp"
                android:text="5512345678"
                android:textColor="@color/grisazul" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Domicilio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_casa_textconfig"
                android:drawablePadding="10dp"
                android:text="Calle falsa, 5, Ampliación Progreso, GAM"
                android:textColor="@color/grisazul" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/editar_perfil_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Editar Perfil"
            android:textColor="@color/grisazul"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <!-- -->
</ScrollView>