<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/colorblanco"
    android:orientation="vertical"
    tools:context=".InicioYRegistro.registroDuenoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:text="Registro"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Datos generales "
        android:textColor="@color/textogris"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/nombre_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Nombre"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/apellidos_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Apellidos" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Domicilio "
        android:textColor="@color/textogris"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/calle_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Calle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <EditText
            android:id="@+id/noext_dueno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ColorLinea"
            android:paddingRight="50dp"
            android:text="No. Exterior"
            android:textColor="@color/textogris"></EditText>

        <EditText
            android:id="@+id/noint_dueno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ColorLinea"
            android:paddingRight="50dp"
            android:text="No. Interior"
            android:textColor="@color/textogris"></EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/colonia_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Colonia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcaldía"
            android:textColor="@color/textogris"
            android:textStyle="bold"></TextView>

        <Spinner
            android:id="@+id/delegacion_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            ></Spinner>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de la cuenta"
        android:textColor="@color/textogris"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/correo2_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Correo Electrónico" />

    <EditText
        android:id="@+id/tel_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Teléfono celular" />

    <EditText
        android:id="@+id/contraseña2_dueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ColorLinea"
        android:hint="Contraseña"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/registrarse2_dueno"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/miboton"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>
</LinearLayout>