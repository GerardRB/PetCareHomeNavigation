<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homenavigation.ui.difusion.perdidas.GenerarReporteExtravioActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_input_imageRMP"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_perro_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:transitionName="@string/image_transition"
                    tools:ignore="MissingConstraints,OnClick,VectorDrawableCompat"
                    android:onClick="onClick"
                    tools:targetApi="lollipop">
                </androidx.appcompat.widget.AppCompatImageView>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/fab_addphotoRMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    app:backgroundTint="@color/colorAccent"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@id/id_input_imageRMP"
                    app:layout_constraintBottom_toBottomOf="@id/id_input_imageRMP"
                    tools:ignore="MissingConstraints"/>
            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_nombreRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_nombre_mascota"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/label_tipoRMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_tipo"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_tipoRMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:theme="@style/Spinner" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_edadRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_edad_mascota"
                android:textColor="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_fechaRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_fecha_extravio"
                android:textColor="@color/colorPrimary"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_horaRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_hora_extravio"
                android:textColor="@color/colorPrimary"/>


            <TextView
                android:id="@+id/label_zona_extravioRMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_zona_extravio"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_alcaldiaRMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_alcaldia"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_alcaldiaRMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:theme="@style/Spinner" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_coloniaRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_colonia"
                android:textColor="@color/colorPrimary"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_calleRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_calle"
                android:textColor="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_descripcionRMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:hint="@string/hint_descripcion"
                android:textColor="@color/colorPrimary" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_btn_generarRMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/title_btn_generar"
                android:textStyle="bold"
                android:background="@drawable/btn_curve"
                android:textColor="#ffffff"
                android:onClick="onClick"
                tools:ignore="OnClick" />


        </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>